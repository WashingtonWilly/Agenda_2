<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:padding="0.2dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <!--icono nota-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/icono_item_nota" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <!--nota-->
                <TextView
                    android:id="@+id/Id_nota_Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans"
                    android:text="@string/Id_nota_Item"
                    android:visibility="gone" />

                <!--Uid de usuario-->
                <TextView
                    android:id="@+id/Uid_Usuario_Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans"
                    android:text="@string/Uid_Usuario_Item"
                    android:visibility="gone" />

                <!--Correo de usuario-->
                <TextView
                    android:id="@+id/Correo_usuario_Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans"
                    android:text="@string/Correo_usuario_Item"
                    android:visibility="gone" />

                <!--Fecha y hora de registro-->
                <TextView
                    android:id="@+id/Fecha_hora_registro_Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans"
                    android:text="@string/Fecha_hora_registro_Item"
                    android:visibility="gone" />

                <!--Titulo de la nota-->
                <TextView
                    android:id="@+id/Titulo_Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans"
                    android:text="@string/Titulo_Item"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <!--Fecha de la nota-->
                <TextView
                    android:id="@+id/Fecha_Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans"
                    android:text="@string/Fecha_Item"
                    android:textSize="18sp" />

                <!--DescripciÃ³n de la nota-->
                <TextView
                    android:id="@+id/Descripcion_Item"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/worksans"
                    android:text="@string/Descripcion_Item"
                    android:textSize="18sp" />

                <!--ESTADO DE LA NOTA-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/Tarea_Finalizada_Item"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="#16A085"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/Tarea_No_Finalizada_Item"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="#E74C3C"/>

                    <!--Estado de la nota-->
                    <TextView
                        android:id="@+id/Estado_Item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans"
                        android:text="@string/Estado_Item"
                        android:layout_marginStart="15dp"
                        android:textSize="20sp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--Uid de nota-->

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>